<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10.0dip"
        android:layout_marginTop="5.0dip"
        android:layout_marginRight="10.0dip"
        android:layout_marginBottom="3.0dip">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_margin="7.0dip"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/sol_icon"
                android:layout_width="90.0dip"
                android:layout_height="90.0dip"
                android:layout_marginRight="10.0dip"
                android:src="@drawable/formulario" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/nomAlum"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Nombre Alumno" />

                <TextView
                    android:id="@+id/nconAlum"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="16171502" />

                <TextView
                    android:id="@+id/carrAlum"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ingenieria en Sistemas Computacionales" />

                <TextView
                    android:id="@+id/fecha"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:text="12/12/0000" />
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>