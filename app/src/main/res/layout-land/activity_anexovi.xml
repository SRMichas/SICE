<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/anexo7_tool"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@color/tool_color"
            android:theme="@style/ToolbarTheme"
            app:titleTextColor="@android:color/white" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5.0dip"
            android:weightSum="4.0">

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1.15"
                android:gravity="center"
                android:text="Instituto:"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txt_alum_inst6"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.9"
                android:gravity="center"
                android:text="Instituto tecnologico de Culiacan" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1.05"
                android:gravity="center"
                android:text="Nombre Estudiante:"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txt_alum_nom6"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.9"
                android:gravity="center"
                android:text="Soria Ramirez Elias Misael" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="50.0dip">

            <LinearLayout
                android:id="@id/col1"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="0.9"
                android:orientation="vertical">

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="18.0dip" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_weight="1.0"
                    android:paddingRight="20.0dip"
                    android:text="Nombre plan de estudios:" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_weight="1.0"
                    android:paddingRight="20.0dip"
                    android:text="Clave plan de estudios:" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_weight="1.0"
                    android:paddingRight="20.0dip"
                    android:text="Instituto:" />
            </LinearLayout>

            <View
                android:layout_width="2.0dip"
                android:layout_height="fill_parent"
                android:background="@android:color/black" />

            <LinearLayout
                android:id="@id/col2"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1.0"
                android:orientation="vertical">

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="1.5dip"
                    android:background="@android:color/black" />

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="@android:color/darker_gray"
                    android:gravity="center"
                    android:text="De:" />

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="1.5dip"
                    android:background="@android:color/black" />

                <TextView
                    android:id="@+id/txt_plan_d6"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="@android:color/white"
                    android:gravity="center"
                    android:text="2015" />

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="1.5dip"
                    android:background="@android:color/black" />

                <TextView
                    android:id="@+id/txt_clave_d6"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="@android:color/white"
                    android:gravity="center"
                    android:text="cve2015" />

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="1.5dip"
                    android:background="@android:color/black" />

                <TextView
                    android:id="@+id/txt_inst_d6"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="@android:color/white"
                    android:gravity="center"
                    android:text="Culiacan" />

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="1.5dip"
                    android:background="@android:color/black" />
            </LinearLayout>

            <View
                android:layout_width="2.0dip"
                android:layout_height="fill_parent"
                android:background="@android:color/black" />

            <LinearLayout
                android:id="@+id/col3"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1.0"
                android:orientation="vertical">

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="1.5dip"
                    android:background="@android:color/black" />

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="@android:color/darker_gray"
                    android:gravity="center"
                    android:text="A:" />

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="1.5dip"
                    android:background="@android:color/black" />

                <TextView
                    android:id="@+id/txt_plan_a6"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="@android:color/white"
                    android:gravity="center"
                    android:text="2015" />

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="1.5dip"
                    android:background="@android:color/black" />

                <TextView
                    android:id="@+id/txt_clave_a6"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="@android:color/white"
                    android:gravity="center"
                    android:text="cve2015" />

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="1.5dip"
                    android:background="@android:color/black" />

                <TextView
                    android:id="@+id/txt_inst_a6"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="@android:color/white"
                    android:gravity="center"
                    android:text="Culiacan" />

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="1.5dip"
                    android:background="@android:color/black" />
            </LinearLayout>

            <View
                android:layout_width="2.0dip"
                android:layout_height="fill_parent"
                android:background="@android:color/black" />
        </LinearLayout>

        <include layout="@layout/cabezera" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recy_mat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:id="@+id/contenedorMaestro"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/cm_col1"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1.0"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.5"
                        android:text="Analizada por:" />

                    <EditText
                        android:id="@+id/edt_firma_analizado"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="15.0dip"
                        android:layout_weight="1.0"
                        android:hint="firma" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.5"
                        android:text="Jefe de Academia:" />

                    <EditText
                        android:id="@+id/edt_firma_jefe_academia"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="15.0dip"
                        android:layout_weight="1.0"
                        android:hint="firma" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1.0"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="1.5"
                    android:gravity="center"
                    android:text="Jefe Departamento Academico:" />

                <EditText
                    android:id="@+id/JefeDepa"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.0"
                    android:hint="firma" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Spinner
                android:id="@+id/sp_gen"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="50.0dip"
                android:layout_weight="0.7" />

            <Button
                style="@style/miStilo"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginLeft="50.0dip"
                android:layout_marginRight="30.0dip"
                android:layout_weight="1.0"
                android:onClick="makeChange"
                android:text="Aceptar" />
        </LinearLayout>
    </LinearLayout>
</ScrollView>